<div class="row" id="top">
  <form role="form">
    <%= form_tag locations_search_path, method: :get do %>
      <div class="col-md-3 form-group" >
     
      <%= text_field_tag  :current_location, nil, placeholder: "current location" %></div>
      <div class="col-md-3 form-group" id="type">
      <%= text_field_tag :term, nil, placeholder: "type of food" %></div>
      <div class="col-md-3 form-group">
      <%= text_field_tag :radius_filter, nil, placeholder: "radius (in meters)" %></div>
      <div class="btn btn-secondary" id="button"><%= submit_tag "Roll the dice" %></div>
    <% end %>
  </form>
</div>




