<div class="row" id="top">
  <%= form_tag locations_search_path, method: :get do %>
    <div id="current_location" class="col-md-3 form-group" >
    <%= text_field_tag  :current_location, '', placeholder: "current location" %></div>
    <div class="col-md-3 form-group" id="type">
    <%= text_field_tag :term, '', placeholder: "type of food" %></div>
    <div class="col-md-3 form-group">
    <%= text_field_tag :radius_filter, '', placeholder: "radius (in meters)" %></div>
    <div id="dice" id="button"><%= image_submit_tag ("http://images.clipshrine.com/download/wheel/large-two-red-dice-66.6-3210.png"), id: "dice" %></div>
    <!-- < %= link_to image_tag("http://www.pngall.com/wp-content/uploads/2016/04/Dice-PNG.png"), locations_search_path %> -->
  <% end %>
