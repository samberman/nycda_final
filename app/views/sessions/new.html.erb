<div class="row" id="log_in">
	<%= form_tag '/login', method: :post do %>
		<div class="col-md-4"><%= text_field_tag :email, nil, placeholder: "email address", id: "email" %>
		</div>
		<div class="col-md-4">
		<%= password_field_tag :password, nil, placeholder: "password", id: "password" %>
		</div>
		<div class="col-md-4">
			<%= submit_tag 'Log in' %>
		</div>	
	<% end %>
</div>